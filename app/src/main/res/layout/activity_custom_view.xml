<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customviewstudy.CustomViewActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.tomato.amelia.customviewstudy.InputNumberView
                android:id="@+id/input_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:btnBackground="@drawable/selector_number_btn"
                app:defaultValue="2"
                app:disable="false"
                app:max="30"
                app:min="-30"
                app:step="5" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <com.tomato.amelia.customviewstudy.FlowLayout
                    android:id="@+id/text_flow_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>