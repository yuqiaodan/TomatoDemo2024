<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InputNumberView">
        <attr name="defaultValue" format="integer"/>
        <attr name="max" format="integer"/>
        <attr name="min" format="integer"/>
        <attr name="step" format="integer"/>
        <attr name="disable" format="boolean"/>
        <attr name="btnBackground" format="reference"/>
        <attr name="value_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="maxLine" format="integer"/>
        <attr name="itemHorizontalMargin" format="dimension"/>
        <attr name="itemVerticalMargin" format="dimension"/>
        <attr name="textMaxLength" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderRadius" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="KeypadView">
        <attr name="numberColor" format="color"/>
        <attr name="numberSize" format="dimension"/>
        <attr name="itemPressColor" format="color"/>
        <attr name="itemNormalColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SlideMenu">
        <attr name="slideFunction" format="flags">
            <flag name="delete" value="1"/>
            <flag name="read" value="2"/>
            <flag name="top" value="3"/>
        </attr>

    </declare-styleable>

</resources>